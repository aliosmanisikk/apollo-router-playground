    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "@apollo/subgraph": "^2.11.2",
    "graphql": "^16.11.0",
    "graphql-tag": "^2.12.6"
  }
}
